<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.clients.OrderedFood">

    <ImageView
        android:id="@+id/ic_backFromOrderedFood"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_back"
        app:tint="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-black"
            android:text="What must deliver?"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:hint="Product Name"
            android:textColorHint="@color/gray"
            app:boxStrokeColor="@color/purple_500"
            app:hintTextColor="@color/gray"
            app:startIconTint="@color/selector_edit_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Width"
                android:paddingRight="5dp"
                android:textColorHint="@color/gray"
                app:boxStrokeColor="@color/purple_500"
                app:endIconTint="@color/selector_edit_text"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/gray"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/product_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Length"
                android:paddingRight="5dp"
                android:textColorHint="@color/gray"
                app:boxStrokeColor="@color/purple_500"
                app:endIconTint="@color/selector_edit_text"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/gray"
                app:startIconTint="@color/selector_edit_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/product_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Heigth"
                android:paddingRight="5dp"
                android:textColorHint="@color/gray"
                app:boxStrokeColor="@color/purple_500"
                app:endIconTint="@color/selector_edit_text"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/gray"
                app:startIconTint="@color/selector_edit_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/product_heigth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Weigth"
                android:paddingRight="5dp"
                android:textColorHint="@color/gray"
                app:boxStrokeColor="@color/purple_500"
                app:endIconTint="@color/selector_edit_text"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/gray"
                app:startIconTint="@color/selector_edit_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/product_weigth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            android:textSize="16sp" />




    </LinearLayout>


</RelativeLayout>